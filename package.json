{
  "name": "edge-manifest",
  "version": "0.0.0",
  "description": "EDGE-MANIFEST: A pnpm-based monorepo for Cloudflare Workers",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "bun run -F @edge-manifest/core build && bun run --parallel -F @edge-manifest/generators -F @edge-manifest/cli -F @edge-manifest/starter -F @edge-manifest/admin-ui -F @edge-manifest/sdk build",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --build",
    "dev": "bun -r run dev --parallel",
    "release": "bun -r publish --access public"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@cloudflare/workers-types": "4.20251209.0",
    "@elysiajs/eden": "1.4.5",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.1.0",
    "drizzle-orm": "^0.36.4",
    "typescript": "latest",
    "valibot": "^1.1.0",
    "vite": "^5.0.0",
    "vitest": "^1.1.0",
    "wrangler": "4.53.0"
  },
  "overrides": {
    "typescript": "latest"
  },
  "workspaces": [
    "packages/@edge-manifest/*"
  ]
}
