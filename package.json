{
  "name": "edge-manifest",
  "version": "0.0.0",
  "description": "EDGE-MANIFEST: A pnpm-based monorepo for Cloudflare Workers",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "generate": "pnpm --filter @edge-manifest/cli... run build && pnpm exec edge-manifest setup --force",
    "build:packages": "pnpm -r --filter @edge-manifest/core run build && pnpm -r --filter @edge-manifest/generators --filter @edge-manifest/cli --filter @edge-manifest/admin-ui --filter @edge-manifest/sdk run build",
    "build": "pnpm generate && pnpm run build:packages && pnpm --filter @edge-manifest/starter run build",
    "dev": "pnpm generate && pnpm --filter @edge-manifest/starter run dev",
    "migrate:prod": "pnpm generate && pnpm --filter @edge-manifest/starter run migrate:prod",
    "deploy": "pnpm build && pnpm --filter @edge-manifest/starter run deploy",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "typecheck": "pnpm generate && tsc --build",
    "release": "pnpm -r publish --access public"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@cloudflare/workers-types": "4.20251209.0",
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/eden": "1.4.5",
    "@elysiajs/openapi": "^1.4.11",
    "@sinclair/typebox": "^0.34.41",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.1.0",
    "drizzle-orm": "^0.36.4",
    "elysia": "1.4.18",
    "typescript": "latest",
    "valibot": "^1.1.0",
    "vite": "^5.0.0",
    "vitest": "^1.1.0",
    "wrangler": "4.53.0"
  },
  "overrides": {
    "typescript": "latest"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "0.27.0"
    }
  },
  "workspaces": [
    "packages/@edge-manifest/*"
  ]
}
